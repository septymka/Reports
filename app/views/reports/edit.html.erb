<h1>Editing Report</h1>

<%= form_with(model: @report, local: true) do |form| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<p cass ="author">
	<%=@report.first_name %>&nbsp;<%=@report.last_name%>
	<%= mail_to @report.email, @report.email %>
</p>
<hr>
<p class="report"><%= @report.content %></p>
<hr/>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :report_comment %>
  </div>

  <div class="field">
    <%= form.label :grade %>
    <%= form.text_field :grade, id: :report_grade %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Show', @report %> |
<%= link_to 'Back', reports_path %>
